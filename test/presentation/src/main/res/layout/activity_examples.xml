<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:navigationIconTint="@color/orange"
        app:title="@string/examples" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_normal_1"
        android:layout_marginTop="@dimen/margin_normal_1"
        android:text="@string/examples_description"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialToolbar" />

    <com.cornershop.countertest.presentation.create.TemplateExampleListView
        android:id="@+id/examplesDrinks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/drinks_array"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:title="Drinks" />

    <com.cornershop.countertest.presentation.create.TemplateExampleListView
        android:id="@+id/examplesFoods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/food_array"
        app:layout_constraintTop_toBottomOf="@id/examplesDrinks"
        app:title="Food" />

    <com.cornershop.countertest.presentation.create.TemplateExampleListView
        android:id="@+id/examplesMisc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/misc_array"
        app:layout_constraintTop_toBottomOf="@id/examplesFoods"
        app:title="Misc" />
</androidx.constraintlayout.widget.ConstraintLayout>